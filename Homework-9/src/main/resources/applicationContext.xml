<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="myTeacher" class="com.devmind.springapp.JavaTeacher">
        <constructor-arg ref="myWisdomService"/>
        <constructor-arg ref="myHomeworkService"/>
        <property name="age" value="${java.teacher.age}" />
        <property name="workPlace" value="${great.place.to.work}" />
    </bean>
    <bean id="myWisdomService" class="com.devmind.springapp.WisdomWordsService"/>
    <bean id="myHomeworkService" class="com.devmind.springapp.HomeworkService"/>
    <bean id="myMathTeacher" class="com.devmind.springapp.MathTeacher">
        <property name="wisdomService" ref="myWisdomService"/>
    </bean>
</beans>